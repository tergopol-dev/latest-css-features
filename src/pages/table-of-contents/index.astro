<script>
  const anchorLinkList = document.querySelectorAll('a[href^="#"]');

  anchorLinkList.forEach((anchorLink) => {
    anchorLink.addEventListener("click", ($event) => {
      $event.preventDefault();

      const scrollTargetID = anchorLink.getAttribute("href")?.slice(1);
      const targetElement = document.getElementById(scrollTargetID || "");

      if (targetElement) {
        const mainNavHeight = document
          .querySelector(".main-nav")
          ?.getBoundingClientRect()?.height;

        window.scrollTo({
          behavior: "smooth",
          top:
            targetElement.offsetTop - (mainNavHeight ? mainNavHeight + 8 : 0),
        });
      }
    });
  });
</script>

