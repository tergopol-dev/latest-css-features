---
import "../styles/base.css";

interface Props {
  bodyClassName?: string;
  description?: string;
  title: string;
}

const {
  bodyClassName,
  description = "Presentation showcasing the latest CSS features introduced in 2023 and early 2024, aimed at enhancing developers' proficiency in modern web design.",
  title = "HD's Round Table: Latest CSS Features",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="view-transition" content="same-origin" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class:list={[bodyClassName]}>
    <slot />
  </body>
</html>
